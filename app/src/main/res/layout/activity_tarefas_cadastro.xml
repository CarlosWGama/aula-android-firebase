<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.carloswgama.firebase.TarefasCadastroActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/cadastro_tarefa_tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Título:"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cadastro_tarefa_et_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Digite o título da Tarefa"
            android:inputType="textNoSuggestions" />

        <TextView
            android:id="@+id/cadastro_tarefa_tv_imagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Imagem:"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/cadastro_tarefa_iv_foto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0"
            android:onClick="btTirarFoto"
            app:srcCompat="@drawable/ic_camera" />

        <Button
            android:id="@+id/cadastro_tarefa_bt_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="btCadastrar"
            android:text="Cadastrar" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
